<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('partials/head') %>
        <title>update test</title>
</head>

<body class="font-[Inter] bg-gray-50 p-6">
    <%- include('partials/alert') %>
        <form class="" onsubmit="submitTest(event)">
            <div class="text-end">
                <button type="submit" class="px-4 py-2 bg-green-500 text-white rounded">Update Test</button>
            </div>
            <div>
                <h2 class="text-xl font-bold mb-4">Create Test</h2>
                <div class="flex gap-4">
                    <div class="w-fit">
                        <h3 class="text-lg font-bold mb-2">Test Id</h3>
                        <input type="text" id="testId" placeholder="Test Id" readonly
                            class="p-2 border rounded mb-2">
                    </div>
                    <div class="w-fit">
                        <h3 class="text-lg font-bold mb-2">Test Name</h3>
                        <input type="text" id="testName" placeholder="Enter test name" required
                        class="p-2 border rounded mb-2">
                    </div>
                </div>
                <div class="flex gap-4 justify-between">
                    <div class="w-full">
                        <h3 class="text-lg font-bold mb-2">Starting Time</h3>
                        <input type="datetime-local" id="startingTime" required class=" w-full p-2 border rounded mb-2">
                    </div>
                    <div class="w-full">
                        <h3 class="text-lg font-bold mb-2">Ending Time</h3>
                        <input type="datetime-local" id="endingTime" required class="w-full p-2 border rounded mb-2">
                    </div>
                </div>
            </div>
            <div class="mt-4 flex items-center justify-end gap-4">
                <button type="button" onclick="previewTest()"
                    class="px-4 py-2 flex items-center bg-blue-500 text-white rounded">
                    <img src="/createTest/eye.svg" class="h-5 w-5 text-center mr-1">Preview
                </button>
                <input type="file" id="fileInput" accept=".txt" class="hidden">
                <button type="button" onclick="document.getElementById('fileInput').click()"
                    class="px-4 py-2 flex items-center bg-blue-500 text-white rounded">
                    <img src="/createTest/file.svg" class="h-5 w-5 text-center mr-1">Upload from file
                </button>
                <button type="button" onclick="addMCQ()" class="px-4 py-2 bg-blue-500 text-white rounded">Add
                    MCQ</button>
            </div>
            <h3 class="text-lg font-bold mb-2">MCQs</h3>
            <div id="mcqContainer">

            </div>

        </form>

        <script src="/createTest/script.js"></script>
</body>

</html>